<div class="container">
	<h3>List of all users</h3>

	<table class="table">
		<thead>
			<tr>
				<th scope="col">Username</th>
				<th scope="col">Role</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<th><%= link_to "#{user.username}", user_path(user) %></th>
					<th><%= user.role.name %></th>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>